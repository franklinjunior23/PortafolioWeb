---
import ItemDay, { type Technologies } from "./ItemDay.astro";
import TailwindCss from "../Icons/TailwindCss.astro";
import ReactIcon from "../Icons/React.astro";
import Express from "../Icons/Express.astro";
import Mysql from "../Icons/Mysql.astro";
import Sequelize from "../Icons/Sequelize.astro";

interface Jobs_information {
  Date: string;
  Company: string;
  Description: string;
  Tecnologs: Array<Technologies>;
}

const Date_Jobs: Jobs_information[] = [
  {
    Date: "August 2023",
    Company: "Intiscorp SAC",
    Description:
      "Intiscorp is a company dedicated to IT support. I have worked there as IT support and also as a system developer, focusing on creating a system for managing inventory within the companies it serves. This system includes tracking inventory for machinery and users, as well as handling document processing. Additionally, I developed a desktop application capable of sending computer data to an API, enhancing overall system functionality.",
    Tecnologs: [
      { name: "Express", icon: Express },
      { name: "Mysql", icon: Mysql },
      { name: "Sequelize", icon: Sequelize },
      { name: "React", icon: ReactIcon },
      { name: "Tailwind", icon: TailwindCss },
    ],
  },
  {
    Date: "October 2023",
    Company: "IESTP San Luis Maria Montfort",
    Description:
      "IESTP San Luis Maria de Montfort: I created a system for educators and administrators. As part of the educational institution, I developed a web application to manage attendance for both teaching staff and administrative personnel within the school.",
    Tecnologs: [
      { name: "Express", icon: Express },
      { name: "Mysql", icon: Mysql },
      { name: "Sequelize", icon: Sequelize },
      { name: "React", icon: ReactIcon },
      { name: "Tailwind", icon: TailwindCss },
    ],
  },
  {
    Date: "May 2023",
    Company: "GiovaStore",
    Description:
      "GiovaStore: Your fashion destination. I worked on the development of a small ecommerce project based on the MERN stack. I provided solutions for an efficient online shopping experience.",
    Tecnologs: [
      { name: "Express", icon: Express },
      { name: "Mysql", icon: Mysql },
      { name: "Sequelize", icon: Sequelize },
      { name: "React", icon: ReactIcon },
      { name: "Tailwind", icon: TailwindCss },
    ],
  },
  {
    Date: "December 2022",
    Company: "IESTP Karol Wojhtyla",
    Description:
      "IESTP Karol Wojtyla is a school that offers education from preschool to secondary levels. I created a landing page that showcases the educational institution, promoting its monthly offers and promotions. It also provides a platform for sharing stories and highlighting festivities, offering a comprehensive view of the educational experience at the school.",
    Tecnologs: [
      { name: "React", icon: ReactIcon },
      { name: "Tailwind", icon: TailwindCss },
    ],
  },
];
---

<main class="py-10 grid place-content-center">
  <h2 class="text-3xl flex justify-center gap-5 items-center py-5" id="Jobs"
  transition:name="Jobs">
    <span
      ><svg
        class="w-6 h-6 text-gray-800 dark:text-white"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        width="25"
        height="25"
        fill="none"
        viewBox="0 0 20 20"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-width="2"
          d="M1 10c1.5 1.5 5.25 3 9 3s7.5-1.5 9-3m-9-1h.01M2 19h16a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1ZM14 5V3a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v2h8Z"
        ></path>
      </svg></span
    >Jobs
  </h2>
  <article class="relative mx-a border-s border-gray-200 mt-5 grid gap-10">
    {
      Date_Jobs.map((Jobs) => (
        <ItemDay
          Date={Jobs.Date}
          Empresa={Jobs.Company}
          Description={Jobs.Description}
          Tecnologies={Jobs.Tecnologs}
        />
      ))
    }
  </article>
</main>
